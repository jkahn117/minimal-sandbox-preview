---
import SandboxComponent from "../components/SandboxComponent.astro";

// Unique sandbox per page view
const sandboxId = `sandbox-${crypto.randomUUID()}`;
const host = Astro.url.host;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cloudflare Sandbox SDK Minimal Example</title>
  <style>
    body {
      font-family: system-ui, -apple-system, sans-serif;
      margin: 0;
      padding: 20px;
      background: #f5f5f5;
    }
    h1 {
      text-align: center;
      margin-bottom: 10px;
    }
    .subtitle {
      text-align: center;
      color: #666;
      margin-bottom: 30px;
    }
  </style>
</head>
<body>
  <h1>Cloudflare Sandbox SDK Minimal Example</h1>
  <div class="subtitle">
    Express.js server running inside Cloudflare Sandbox container
  </div>
  
  <SandboxComponent sandboxId={sandboxId} host={host} />
</body>
</html>
